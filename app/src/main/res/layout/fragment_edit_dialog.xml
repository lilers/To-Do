<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Views.EditDialogFragment">

    <TextView
        android:id="@+id/taskLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/taskLabel"
        android:layout_marginTop="0dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1"
        tools:targetApi="o"/>

    <EditText
        android:id="@+id/taskET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="@string/taskAddHint"
        android:inputType="text"
        android:textSize="20sp"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@+id/taskLabel"
        tools:targetApi="o"/>

    <TextView
        android:id="@+id/infoLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/infoLabel"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@+id/taskET"
        app:layout_constraintHeight_percent="0.1"
        tools:targetApi="o"/>

    <EditText
        android:id="@+id/infoET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="@string/infoAddHint"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@+id/infoLabel"
        tools:targetApi="o"/>

    <TextView
        android:id="@+id/dueDateLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/dueDateLabel"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@+id/infoET"
        app:layout_constraintHeight_percent="0.1"
        tools:targetApi="o"/>

    <EditText
        android:id="@+id/dueDateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="@string/dueDateHint"
        android:inputType="date"
        android:textSize="20sp"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@+id/dueDateLabel"
        tools:targetApi="o"/>

    <TextView
        android:id="@+id/priorityLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/priorityLabel"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@+id/dueDateET"
        app:layout_constraintHeight_percent="0.1"
        tools:targetApi="o"/>

    <Spinner
        android:id="@+id/prioritySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/priorityArray"
        app:layout_constraintTop_toBottomOf="@+id/priorityLabel"/>
</android.support.constraint.ConstraintLayout>